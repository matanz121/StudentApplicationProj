@inject IClientAuthService _clientAuthService

<MudNavMenu Class="mud-width-full">
    <MudText Typo="Typo.h6" Class="px-4">Main Menu</MudText>
    <MudDivider Class="my-2" />
    @if (_clientAuthService.User != null)
    {
        if (_clientAuthService.User.UserRole == UserRole.Student)
        {
            <MudNavLink Href="/add-request" Icon="@Icons.Filled.Dashboard">Create a new request</MudNavLink>
        }
        <MudNavLink Href="/requests" Icon="@Icons.Filled.Storage">Request Management</MudNavLink>
        if (_clientAuthService.User.UserRole == UserRole.Administrator)
        {
            <MudNavLink Href="/accounts" Icon="@Icons.Filled.People">Account Request</MudNavLink>
            <MudNavLink Href="/add-course" Icon="@Icons.Filled.Book">Add Course</MudNavLink>
            <MudNavLink Href="/add-department" Icon="@Icons.Filled.MenuBook">Add Department</MudNavLink>
        }
    }
</MudNavMenu>


